<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.StartAppActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo_id"
            android:layout_width="173dp"
            android:layout_height="173dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="104dp"
            android:layout_marginRight="104dp"
            android:layout_marginLeft="104dp"
            android:src="@drawable/talhatrainning" />

        <TextView
            android:id="@+id/title_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo_id"
            android:layout_alignStart="@+id/logo_id"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="Patha"
            android:textColor="#008000"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/title_id1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/title_id"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="102dp"
            android:layout_marginRight="102dp"
            android:text="Shathi"
            android:textColor="#FF0000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_id1"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="251dp"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:text="Women Security powered by TalhaSoft"
            android:textColor="@color/colorPrimary1" />

    </RelativeLayout>

</RelativeLayout>